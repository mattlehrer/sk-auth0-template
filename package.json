{
	"name": "sk-auth0-template",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
		"pages:preview": "npm run build && wrangler pages dev --compatibility-date=2024-02-08 .svelte-kit/cloudflare",
		"pages:deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240208.0",
		"@playwright/test": "^1.41.2",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/eslint": "8.56.2",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@typescript-eslint/parser": "^7.0.1",
		"dotenv": "^16.4.4",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss-custom-media": "^10.0.2",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.1",
		"svelte": "^4.2.10",
		"svelte-check": "^3.6.4",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.2",
		"vitest": "^1.2.2",
		"wrangler": "^3.28.2"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.1",
		"@planetscale/database": "^1.16.0",
		"arctic": "^1.1.5",
		"drizzle-orm": "^0.29.3",
		"lucia": "^3.0.1",
		"mysql2": "^3.9.1",
		"open-props": "^1.6.18",
		"oslo": "^1.1.1"
	}
}
